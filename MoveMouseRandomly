#!/bin/bash

while true; do
    randomX=$((RANDOM % 1920))
    randomY=$((RANDOM % 1080))
    
    # Move the mouse cursor to the random position
    DISPLAY=:0 xdotool mousemove --sync $randomX $randomY
    
    sleep 60
done

